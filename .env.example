# EDU Chain Backend Configuration
# Copy this file to .env and fill in the values

# Server
NODE_ENV=development
PORT=3001

# P2P Network
P2P_PORT=6001

# IPFS Configuration
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080

# Production IPFS Gateway (for VPS)
# IPFS_GATEWAY_URL=https://ipfs.lvenc.site

# Admin API Key (required for /admin endpoints)
# Generate a secure key: openssl rand -hex 32
ADMIN_API_KEY=your-secret-api-key-here

# Logging
LOG_LEVEL=info

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Production CORS
# CORS_ORIGINS=https://lvenc.site,https://www.lvenc.site
