# EDU Chain Backend Configuration
# Copy this file to .env and fill in the values

# Server
NODE_ENV=development
PORT=3001

# P2P Network
P2P_PORT=6001

# Lighthouse Storage (Filecoin)
# Get your API key from https://files.lighthouse.storage
LIGHTHOUSE_API_KEY=your-lighthouse-api-key-here

# IPFS Gateway URL (use Lighthouse gateway or custom)
IPFS_GATEWAY_URL=https://gateway.lighthouse.storage/ipfs

# Admin API Key (required for /admin endpoints)
# Generate a secure key: openssl rand -hex 32
ADMIN_API_KEY=your-secret-api-key-here

# Logging
LOG_LEVEL=info

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Production CORS
# CORS_ORIGINS=https://lvenc.site,https://www.lvenc.site
